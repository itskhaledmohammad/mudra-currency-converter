{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@root/*": ["*"],
      "@src/*": ["src/*"],
      "@api/*": ["src/api/*"],
      "@config/*": ["config/*"],
      "*": [
        "node_modules/*"
      ],
    }
  },
  "include": [
    "src/**/*"
  ],
}
